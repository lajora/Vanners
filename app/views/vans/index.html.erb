<div class="container">


  <div class="header">
    <h1>Browse vans</h1>
  </div>


  <div class="search-box">
    <div class="sb search-from">
      <h2>from</h2>
      <input class="ymd" type="date">
    </div>
    <div class="sb search-to">
      <h2>to</h2>
      <input class="ymd" type="date">
    </div>
    <div class="sb search-city">
      <h2>city</h2>
      <input class="ymd" type="text" placeholder="Barcelona">
    </div>
  </div>

  <h3>Available vans</h3>

    <div class="cards">
      <% @vans.each do |van| %>
        <%= link_to van_path(van) do %>
          <div class="van-card">
            <%= image_tag "van1.jpg"%>
            <h4><%= van.title %> - â‚¬<%= van.price %> </h4>
            <p><%= truncate(van.description, :length => 70) %> </p>
            <br>
          </div>
        <% end %>
      <% end %>
    </div>

</div>
